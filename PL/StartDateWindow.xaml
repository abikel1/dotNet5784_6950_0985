<Window x:Class="PL.StartDateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Title="StartDateWindow" Height="150" Width="150">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Margin="5" Content="Enter the start date of the project:"/>
            <DatePicker SelectedDate="{Binding StartDate, Mode=TwoWay}" Margin="5"/>
            <Button Margin="5"  Content="Update" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
